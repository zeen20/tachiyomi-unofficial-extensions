<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.beerpsi.tachiyomi.extension">
    <application>
        <activity
            android:name=".all.mangaplus.MangaPlusUrlActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="https" />

                <data android:host="mangaplus.shueisha.co.jp" />
                <data android:host="www.mangaplus.shueisha.co.jp" />
                <data android:host="jumpg-webapi.tokyo-cdn.com" />
                <data android:host="www.jumpg-webapi.tokyo-cdn.com" />

                <data android:pathPattern="/titles/..*" />
                <data android:path="/www/sns_share" />
                <data android:path="/www/sns_share" />
                <data android:pathPattern="/viewer/..*" />
            </intent-filter>
        </activity>
    </application>
</manifest>
